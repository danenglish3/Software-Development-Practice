<!DOCTYPE html>
<html>

<head>
    <% include ../partials/head %>
</head>

<body>
    <header>
        <% include ../partials/header %>
    </header>

    <div class="container mt-4">
        <div class="row jumbotron">
            <div class="col-md-3 text-center">
                <img class="rounded-circle" src="/temp/<%= image %>" alt="profile picture" width="200">
                <h3 class="mt-2">
                    <%= name %>
                    <%if (editable === true){%>
                    <p>
                        <a class="btn btn-primary btn-outline-dark" href="/profile/<%= id %>/edit">Edit</a>
                    </p>
                    <%}%>
                </h3>
            </div>
            <dl class="col-md-9">

                <div class="row">
                    <dt class="col-md-3">Date Joined</dt>
                    <dd class="col-md-6">
                        <%= joinDate %>
                    </dd>
                </div>

                <div class="row">
                    <dt class="col-md-3">Phone</dt>
                    <dd class="col-md-6">
                        <%= phone %>
                    </dd>
                </div>

                <div class="row">
                    <dt class="col-md-3">Address</dt>
                    <dd class="col-md-6">
                        <address>
                            <%= street %> <br>
                            <%= suburb %> <br>
                            <%= city %> <br>
                            <%= postcode %>
                        </address>
                    </dd>
                </div>

                <div class="row">
                    <dt class="col-md-3">About</dt>
                    <dd class="col-md-6">
                        <%= description %>
                    </dd>
                </div>
            </dl>
        </div>

        <h4>Services Listed</h4>
        <% if(listingResults.length > 0){ %>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">
                        #
                    </th>
                    <th scope="col">
                        Name
                    </th>
                    <th scope="col">
                        Category
                    </th>
                    <th scope="col">
                        Location
                    </th>
                </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < listingResults.length; i++) { %>
                <tr onclick="window.location.assign('/listing/<%= listingResults[i].singleListing.serviceid %>');">
                    <td>
                        <%= listingResults[i].singleListing.serviceid %>
                    </td>
                    <td>
                        <%= listingResults[i].singleListing.name %>
                    </td>
                    <td>
                        <%= listingResults[i].singleListing.category %>
                    </td>
                    <td>
                        <%= listingResults[i].singleListing.location %>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
        <% } else{ %>
        <em>No Services Listed!</em>
        <% } %>
    </div>

    <footer>
        <% include ../partials/footer %>
    </footer>
</body>

</html>